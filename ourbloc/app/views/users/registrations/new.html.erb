


<div class="loginform">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, :class =>"fieldtext" %><br />
    <%= f.email_field :email, autofocus: true , :class =>"fieldtext" %>
  </div>

  <div class="field">
    <%= f.label :password , :class =>"fieldtext" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class =>"fieldtext" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation , :class =>"fieldtext" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , :class =>"fieldtext" %>
  </div>

  <div class="waves-effect waves-light btn " id="signupbtn">
    <%= f.submit "Get My RoadMap up", class:"white-text" %>
  </div>
<% end %>

<%= render "users/shared/links"  %>
</div>

