<div class="container">
  <div class="row">

    <div class="col s6">
        <ul class="tabs" class="scrollable">
          <li class="tab col s1"><a href="#Jobs">Job</a></li>
          <li class="tab col s1"><a href="#Resources">Resource</a></li>
          <li class="tab col s1"><a href="#Asks">Asks</a></li>
          <li class="tab col s1"><a href="#Shares">Shares</a></li>
        </ul>
    </div><br>
  
    <div id="Jobs" class="col s12 center">
      <%= link_to "add", new_job_path, class: "btn-floating btn-large waves-effect waves-light red" %>
      <% @academia.jobs.each do |a| %>
      <div class="row">
        <div class="col s12 m6">
            <div class="card white">
            <div class="card-content teal-text">
              <span class="card-title"><%=  link_to a.title, job_path(@academia.jobs) %></span>
              <p><%= a.title %></p>
              <p><%= a.description %></p>
              <p><%= a.text %></p>
              <p><%= link_to "upvote", like_job_path(@academia.jobs), method: :put %> 
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div id="Resources" class="col s12 center">
      <% @academia.resources.each do |a| %>
      <div class="row">
        <div class="col s12 m6">
            <div class="card white">
            <div class="card-content teal-text">
              <span class="card-title"><%= a.title %></span>
              <p><%= a.title %></p>
              <p><%= a.description %></p>
              <p><%= a.text %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div id="Asks" class="col s12 center">
      <% @academia.asks.each do |a| %>
      <div class="row">
        <div class="col s12 m6">
            <div class="card white">
            <div class="card-content teal-text">
              <span class="card-title"><%= a.title %></span>
              <p><%= a.title %></p>
              <p><%= a.description %></p>
              <p><%= a.text %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div id="Shares" class="col s12 center">
      <% @academia.shares.each do |a| %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card white">
            <div class="card-content teal-text">
              <span class="card-title"><%= a.title %></span>
              <p><%= a.title %></p>
              <p><%= a.description %></p>
              <p><%= a.text %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>

  </div>
</div>
