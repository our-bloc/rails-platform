<div class="container">
  <div class="row">

    <div class="col s12">
        <ul class="tabs" class="scrollable">
          <li class="tab col s3"><a href="#Jobs">Job</a></li>
          <li class="tab col s3"><a href="#Resources">Resource</a></li>
          <li class="tab col s3"><a href="#Asks">Asks</a></li>
          <li class="tab col s3"><a href="#Shares">Shares</a></li>
        </ul>
    </div><br>
    <div class="name">
      <br>
      <h4><%= @academia.name %></h4>
    </div>

    <div id="Jobs" class="col s12 center">
      <%= link_to "add", new_job_path, class: "btn-floating btn-large waves-effect waves-light red" %>
      <% @academia.jobs.each do |a| %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= a.title %></span>
              <p><%= a.title %></p>
              <p><%= a.description %></p>
              <p><%= a.text %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div id="Resources" class="col s12 center">
      <% @academia.resources.each do |a| %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= a.title %></span>
              <p><%= a.title %></p>
              <p><%= a.description %></p>
              <p><%= a.text %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div id="Asks" class="col s12 center">
      <% @academia.asks.each do |a| %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= a.title %></span>
              <p><%= a.title %></p>
              <p><%= a.description %></p>
              <p><%= a.text %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div id="Shares" class="col s12 center">
      <% @academia.shares.each do |a| %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= a.title %></span>
              <p><%= a.title %></p>
              <p><%= a.description %></p>
              <p><%= a.text %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>

  </div>
</div>
