

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s12 m6">
    <div class="card grey darken-2">
      <div class="card-content white-text">
        <span class="card-title"><%= @job.title %>></span>
        <p><%= @job.description %></p>
        <p><%= @job.industry %></p>

        <p class="right">Deadline: <%= @job.deadline %></p>
      </div>
      <div class="card-action">
        <a href="#"><%= link_to 'Edit', edit_job_path(@job) %></a>
        <a href="#"><%= link_to 'Back', jobs_path %></a>
      </div>
    </div>
  </div>
</div>
