<!-- DREAM JOB PORTION OF QUIZ --> 
<section>
<div id="dreamjob">
<div id="dream_section">
    <h5 style="color:white; opacity:1; z-index: 2; margin-top: -20%"> WHAT IS YOUR DREAM SUMMER OPPORTUNITY? </h5>  
    <%= f.text_field :firstjob ,:id => "field_firstjob", :value => " " %>
   
    <div id="submit_firstjob" class="white-text btn waves-effect waves-light"> NEXT </div> 

</div>
</div>
</section>
<!-- end dream job portion of quiz --> 




<!-- STYLE PORTION OF QUIZ --> 
<section> 
<div class="style" id="style">
    <div style="height: 10em"> </div>
    <h5 style="color:white"> WHO IS YOUR DREAM MENTOR? </h5>
    
    <%= f.hidden_field :style ,:id => "field_style" %>

