  </div>
  
</section>
<!-- end style portion of quiz --> 

<!-- grad school section --> 
<section id="grad_section"> 
    <%= f.hidden_field :gradschool , :id =>"field_grad" %>
    <h5 id"grad_header" style="color:white; opacity:1; z-index: 2"> GRAD SCHOOL DREAMS? </h5>  

    
    <div class="grad_button white-text btn waves-effect waves-light" id="None"> Nope </div>
    <div class="grad_button white-text btn waves-effect waves-light" id="Master's Program"> Masters Program </div>
    <div class="grad_button white-text btn waves-effect waves-light" id="PhD Program"> PhD Program </div>
    <div class="grad_button white-text btn waves-effect waves-light" id="Law School"> Med School </div>
    <div class="grad_button white-text btn waves-effect waves-light" id="Med School"> Law School </div>
    <div class="grad_button white-text btn waves-effect waves-light" id="Business School"> Business School </div>
</section>

<section>
<div id="major_head">
<div id="major_section">
    <h5 style="color:white; opacity:1; z-index: 2; padding-top: 10%"> MAJOR? </h5>  
    <div class="row">
        <div class="col l8 white-text">
            <%= f.text_field :major ,:id => "field_major", :value => " " %>
        </div>
        
        
        </div>
        <div id="submit_major" class="white-text btn waves-effect waves-light"> ALMOST THERE... </div> 
    </div>

</div>
</section>

    
<!-- prep section -->
<section id="prep_head">
 <h5 style="margin-top: 4%;color:white"> WHAT ARE YOU STRUGGLING WITH? </h5>
    <div id="prep_section" > 
    
    <%= f.hidden_field :prep, :id => "field_prep" %> 

    <div id="need_resume" class="prep_button white-text btn waves-effect waves-light"> Starting a resume </div>
    <div id="salary_negotiation" class="prep_button white-text btn waves-effect waves-light"> Nailing my interviews </div>
    <div id="revise_resume" class="prep_button white-text btn waves-effect waves-light"> Getting my resume together </div>
    <div id="need_connections" class="prep_button white-text btn waves-effect waves-light"> Hearing back on applications</div>
    <div id="need_jobs" class="prep_button white-text btn waves-effect waves-light"> Finding jobs I care about</div>
    <div id="cover_letters" class="prep_button white-text btn waves-effect waves-light"> Cover letters...sigh </div>
    <div id="personal_statements" class="prep_button white-text btn waves-effect waves-light"> Writing personal statements </div>
    <div id="salary_negotiation" class="prep_button white-text btn waves-effect waves-light"> Negotiating my salary </div>


   </div>
   </section>
   
   <%= f.submit %> 
  
<% end %>




<script>
//on load, hide industry descriptions

  
//on hover, show industry descriptions
 $('.form_pic').hover(function(){
        var industry = "#"+ $(this).attr("id") + "_description";
            console.log(industry);
            
            $(industry).css({
                'display': 'block'
        }); 
            
            }); 
            
$('.form_pic').mouseout(function(){
        var industry = "#"+ $(this).attr("id") + "_description";
            console.log(industry);
            
            $(industry).css({
                'display': 'none'
        }); 
            
            }); 
        

//SCRIPT FOR DREAM JOB
 $("#submit_firstjob").click(function(){
    $('html,body').animate({
            scrollTop: $("#style").offset().top},
            'slow');
 });
   
//SCRIPT FOR INDUSTRY SECTION OF QUIZ
    $('.form_pic').click(function(){
        var industryval = $(this).attr("id");
            console.log(industryval);
            
        $("#field_industry").val(industryval);
            
        
        $(this).css({
        'border': '4px solid yellow'
        }); 
        
        $(this).siblings().css({
            'border': '4px solid white'
            }); 
            
        $('html,body').animate({
            scrollTop: $("#dreamjob").offset().top},
            'slow');
    });
    
    
    
//SCRIPT FOR STYLE  SECTION OF QUIZ    
     $('.style_pic').click(function(){
        var styleval = $(this).attr("id");
            console.log(styleval);
            
            $("#field_style").val(styleval);
            
        $(this).css({
        'border': '4px solid yellow'
        }); 
       
        $(this).siblings().css({
            'border': '4px solid white'
            }); 
        $('html,body').animate({
            scrollTop: $("#grad_section").offset().top},
            'slow');


     }); 
        
   
    
// Grad Section 
       $('.grad_button').click(function(){
            var idval = $(this).attr("id");
            console.log(idval);
            
            $("#field_grad").val(idval + " School");
            
            $(this).css({
            'border': '4px solid yellow'
            }); 
       

        $('html,body').animate({
            scrollTop: $("#major_head").offset().top},
            'slow');
        }); 
        
//Major & Class 
 $('#submit_major').click(function(){
        $('html,body').animate({
            scrollTop: $("#prep_head").offset().top},
            'slow');
        }); 

        
        
// SUBMIT FORM AFTER CHOOSING PREP 
     $('.prep_button').click(function(){
         var idval = $(this).attr("id");
            console.log(idval);
            
             $('#field_prep').val(idval);
             
            $(this).css({
            'border': '4px solid yellow'
            }); 
            
            $(this).siblings().css({
                'border': 'none'
                }); 
            $("form").submit();
        }); 
        
</script>






