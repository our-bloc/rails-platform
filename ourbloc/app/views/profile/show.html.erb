
<div class="profile"> 
<div class ="profile_info row">
    <div class="col s12 l6"> 
        <h6><%= image_tag @user.picture, class:  "circle" %> </h6>
        <h5> <%= @user.name %> </h5>
        <h6> <%= @user.email %> </h6>
        <h6> <%= @user.school %> </h6>
        <h6> <%= @user.experience %> </h6>
        <h6> <%= @user.major%> | <%= @user.gradyear%> </h6>
    </div> 

    <div class="col s12 l6"> 
        <% if @vision != nil %>
            <h5 style="margin-top: 22%"> seeing it to be it... </h5>
            <div style="height: 2em">
              <% @influencers.each do |influencer| %>
                <h6><%= influencer.name %></h6>
              <% end %>
            </div>
            <% else %> 
            <h5><%= link_to "Get started by building your first playlist", new_vision_path %> </h5>
            <div style="height: 2em"> </div>
            <% end %>
    
        <h6 class="teal-text">share code: <%= link_to "https://blocview-aminabloc.c9users.io/"+ @user.profileurl, "https://blocview-aminabloc.c9users.io/"+ @user.profileurl  %> </h6>
     </div>
 </div> 
 
 <div class="share_bar">
   
    <% if user_signed_in? %> 
    <p> <%= link_to "back to my profile", myprofile_path, class: "white-text" %> </p>

    <% else%> 
    <p> <%= link_to "Create your account and get your own custom career playlist!", user_facebook_omniauth_authorize_path(:referred_by => @user.profileurl), class:"white-text" %> </p>
    
    <% end %> 
</div>
</div>


     
     
     
     
     
     
      
   
 
  


        

