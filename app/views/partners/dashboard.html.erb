<script> 
$( document ).ready(function() {
    $('body').css('overflow','hidden');
    $('body').attr('scroll','no');
    $('.hide_job_email').hide();
});


$(".show_job_email").click(function(){
    $(this).hide(0);
    $(this).next('.hide_job_email').show(0);
    
    var name = $(this).next(".email_job").text();
    var link = $(this).next(".email_job").attr('href');
    
    $(this).next('#include_job').val(name);
    $(this).next('#include_job_link').val(link);
});

$('.hide_job_email').click(function(){
   $(this).hide(0);
  $(this).prev('.show_job_email').show(0);

    $(this).next('#include_job').val();
    $(this).next('#include_job_link').val();
})

$('#show_events').click(function(){
  $(this).hide();
  $(".hide_events").css("display","inline");
  $(".new_event").hide();
})

$('#create_event').click(function(){
  $(this).hide();
  $(".hide_events").css("display","none");
  $(".new_event").show();
  $("#show_events").show();
})

   
</script>