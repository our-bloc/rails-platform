<div class="jobs_card">
  <% @jobs.each do |job| %>
  <div class="row">
        <div class="col s12 m4">
            <div class="card white">
            <div class="card-content teal-text">
              <span class="card-title"><%=  link_to job.title, job_path(job) %></span>
              <p><%= job.description %></p>
              <i id="save" class="unsaved fa fa-heart-o"></i>
              <p><%= job.industry %></p>
              <td><%= job.created_at.strftime("%m/%d/%y") %></td>
              
              

              
          <%= form_for(job) do |f| %>
              <%= f.hidden_field :saved, :id => "save_field" %>
          <% end %> 
        
              
            </div>
          </div>
        </div>
      </div>
  <% end %>
 
</div>

<style>
a{
  color: teal;
}
p{
  color: grey;
}
a:hover{
background-color: white;
color: grey;
}

.jobs_card{
  left: 25%;
  position: absolute;
  width: 70%;
}

#like_button{
  align:right;
}

</style>


<script>
  $('.unsaved').click(function(){
    var save_class = $(this).hasClass("fa fa-heart-o");
    
    if ($(this).hasClass("fa fa-heart-o")){
      $("form").submit(true);
      console.log("saved");
      $(this).toggleClass("fa-heart-o fa-heart active");

    } else {
      $("form").submit(false);
      console.log("unsaved");
      $(this).toggleClass("fa-heart-o fa-heart active");

      };

  });
  
</script>