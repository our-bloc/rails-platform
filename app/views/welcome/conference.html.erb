    <!-- Theme CSS -->
    <link href="css/new-age.css" rel="stylesheet">
    
    <!-- Scroll Lock --> 
    <% content_for :javascript_includes do %>
  <%= javascript_include_tag "scrollLock.js" %>
<% end %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
