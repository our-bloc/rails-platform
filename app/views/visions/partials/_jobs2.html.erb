
     <% @jobs.each do |job| %>
        <div class="card horizontal white col s6" >
                <!--
                <div class="card-image">
                    <img src="http://www.ourbloc.co/uploads/2/4/0/1/24014742/coverpic_orig.jpg">
                  </div> -->
            <div class="card-content teal-text">
              <span class="indeed_show card-title" style="line-height: 1em"><%= job.title %></span>
              
              <div </div>> 
                  <p ><%= job.description %></p>
                    <i id="save" class="unsaved fa fa-heart-o"></i>
    
                  <td><%= job.created_at.strftime("%m/%d/%y") %></td>
            </div>
              
          <%= form_tag do %>
              <%= hidden_field_tag(:saved, true) %>
              <% end %> 
               </div>
          </div>
          <% end %>
          
    
     <%  @indeed_results[4..7].each do |job| %>
            <% if @color2_count == 0 || @color_count == 3 %> 
            <div class="card horizontal col s6" style="background-color: #2eb2ff" >
        <% elsif @color2_count == 1 %> 
            <div class="card horizontal col s6" style="background-color: #d9d9d9">
        <% else %> 
            <div class="card horizontal col s6" style="background-color: #5271ff">
        <% end %> 
        
       
        
            <div class="card-content white-text">
                <div class="hide_card">
                    <h4 id="job_title"><%= job.job_title.upcase %></h4>
                    <h5 id="job_company"><%= job.company %></h5>
                     
                 </div>
                 
                <div class="show_card"> 
                  <p><%= job.snippet%></p>
                   <p><%= job.city %>, <%= job.state %>| <%= job.date.to_s.split(" ")[0] %></p>

            <%= link_to "MORE", job.url, :class => "indeed_more grey-text" %> 
            <% @color2_count += 1 %> 

                </div>
               </div>
              </div>
          <% end %>
          
         
        
        <% @second_indeed_results.each do |job| %>
            <div class="card horizontal teal" style="">
             
            <div class="card-content white-text">
            
              <span style="font-size: 2em"><%= job.job_title %></span>
                <p><%= job.company %></p>
                <p class="grey-text"><%= job.snippet%></p>
                <p><%= job.city %>, <%= job.state %>| <%= job.date.to_s.split(" ")[0] %></p>
            
               </div>
              </div>
          <% end %>
        
        
      <% if current_user.sign_in_count == 150 %> 

        <div id="second_indeed_search"> 
             <%= form_tag(vision_path , method: "get", remote: true ) do  %>  
             
               <div class="input-field" style="line-height: 1.1">
                <%= label_tag :q, "Type in a new job description to refine your timeline"%> 
                 <%= text_field_tag :q %> 
                <%= submit_tag "Refine your search", :class => "white-text btn waves-effect waves-light", :id => "second_indeed_submit" %> 
                </div>
                <% end %> 
            </div> 
        <% end %>
        
        
        
        
        
        
          <style> 
          
          .indeed_more{
              font-family: Raleway Heavy;
              border: 1px solid grey;
              margin: 1% 1% 1% 80%;
              padding: 1%;
              
          }
          .indeed_more:hover{
              background-color: grey;
              color:black;
          }
          .card  {
              width: 100%;
          }
          .card-content{
              width: 100%;
          }
          a {
              line-height: 1em;
          }
          
          a:hover{
              color: teal ;
          }
          
          @media only screen and (max-device-width: 480px){
              .show_card{
                  background-color: white;
                  position:relative;
                  margin: -5% 0% 0% -11%;
                  width: 122%;
                  height: 30em;
                  padding: 20% 10% 10% 10%;
                  color: #44d9e6;
                  font-family: Lato;
                  text-transform: lowercase;
              }
              #job_title{
                  font-family: Raleway;
                  font-size: 3em;
                  position:absolute;
                  top: 10%;
                  margin: 10% -10%;
                  text-align: center;
                  width: 100%;
              }
              #job_company{
                  position:absolute;
                  color:white;
                  bottom: 5%;
                  font-family: Raleway;
                  font-size: 1.5em;
                  text-align: center;
                  text-transform: uppercase;
              }
              .show_on_click{
                  display: none;
              }
              .indeed_more{
                width: 20%;
                margin: 1% 1% 5% 85%;
                height: 10%;
                padding: 1%;

              }
              .card{
                  width: 100%;
                  position:relative;
                  margin-left: 0%;
                  padding: 10% 0%;
                  height: 30em;
                  margin:0;
              }
          }
          
          </style>
          
          <script> 
              $(document).ready(function(){
                $('.show_card').hide()
              });
              
              $('.hide_card').click(function(){
                  $(this).hide(10);
                $(this).next('.show_card').show(5);
                $(this).parent('.card').css
              });
              
              $('.show_card').click(function(){
                  $(this).hide(10);
                $(this).prev('.hide_card').show(5);
              });
              
            
             
          </script>
   