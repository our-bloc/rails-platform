
<div class="profile"> 
<div class ="profile_info row">
    <div class="col s12 l6"> 
        <h6><%= image_tag @user.picture, class:  "circle" %> </h6>
        <h5> <%= @user.name %> </h5>
        <% if current_user.role != "student" %> 
        <h6> <%= @user.email %> </h6>
        <% end %> 
        <h6> <% if @user.school != nil %> <%= @user.school.titleize %> <%end %> </h6>
        <h6> <% if @user.experience != nil %> <%= @user.experience.titleize %> <% end %>  </h6>
        <h6> <% if @user.major != nil %> <%= @user.major.titleize %><% end %> </h6>
        <h6> <% if @user.gradyear != nil %> <%= @user.gradyear%> <% end %>  </h6>
    </div> 

    <div class="col s12 l6"> 
        <% if @vision != nil %>
            <h5 style="margin-top: 10%"> my career profile... </h5>
            
                <h6><%= @vision.industry %></h6>
                
            <% else %> 
           
            <% end %>
    
        <h6 id="share_code">share code: <%= link_to "jointhebloc.com/"+ @user.profileurl, "https://blocview-aminabloc.c9users.io/"+ @user.profileurl  %> </h6>
     </div>
 </div> 
 
 <div class="share_bar">
   
   <% if user_signed_in? %> 		     
     <p> <%= link_to "back to my profile", myprofile_path, class: "white-text" %> </p>		   
     
     <% else %> 
    <p id="profile-oauth"> <%= link_to "Click to create your account and get your own custom career playlist!", user_facebook_omniauth_authorize_path, class:"white-text" %> </p>
     		     
     <% end %> 
    
   
</div>
</div>

<style>
  #profile-oauth{
    line-height: 1.2;
  }
</style>


     
     
     
     
     
     
      
   
 
  


        

