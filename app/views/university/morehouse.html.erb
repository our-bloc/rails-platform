    <![endif]-->

</head>

<body id="page-top">

    <%= render 'university/partials/university_nav' %> 

    <header>
        <div class="container">
            <div class="row" >
                <div class="col s12 m7">
                    <div class="header-content">
                        <div class="header-content-inner">
                            <br> 
                            <h1 class="grey-text">Access personalized resources that will help you <span class="cyan_highlight" id="highlight_1">land</span>
                            & <span class="cyan_highlight" id="highlight_2">keep</span>  your <span class="cyan_highlight" id="highlight_3">dream job</span>. </h1><br>
                             
                             
                        <!-- FORM FOR REGISTRATION --> 
                             <%= form_tag(new_user_registration_path, :method => "get") do %>
                            <div class="row" style="position:relative; margin-top:2%; width: 100%; padding: 2% 1%; height: 6em ">
                                <div class="col l4 s12" style="padding: 2%">
                                    <%= text_field_tag(:name , "", placeholder: "NAME",style: "font-size: 2em; 
                                    border: 3px solid #4dd0e1; padding: .2em 1em; width: 70% ", class:"cyan-text lighten-1" ) %>
                                </div>
                                
                                <div class="col l4 s12" style="padding: 2%">
                                    <%= text_field_tag(:email , "", placeholder: "EMAIL" ,style: "font-size: 2em; 
                                    border: 3px solid #4dd0e1; padding: .2em 1em; width: 70% ", class:"cyan-text lighten-1" ) %>
                                    
                                    <%= hidden_field_tag(:university , :value => "Morehouse College" ) %> 
                                </div>
                                 
                                
                                <div class="col l3 s12" style="padding: 2%">
                                    <%= submit_tag("Send me weekly tips!", class: "waves-effect cyan btn whit-text lighten-1",
                                    style:"margin-top: .5em, margin-bottom: 2em" ) %>
                                </div>
                            </div>
                            <% end %>   
                        </div>
                    </div>
                </div>
                
                <div class="col s12 m5 l5">
                    <div class="device-container">
                        <div class="device-mockup iphone6_plus portrait white">
                            <div class="device">
                                <div class="screen">
                                    <!-- Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! -->
                                    <img src="img/demophone.png" style="width: 100%" class="img-responsive" alt="">
                                </div>
                                <div class="button">
                                    <!-- You can hook the "home button" to some JavaScript events or just remove it -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>


<% end %> 
</nav>

<div class="row"> 
    <% if user_signed_in?  %> 
    <div class="col s12 l3 sidemenu">
        <%= render "university/partials/menu" %> 
    </div>
    <% end %> 
    
    <div class="col s12 l9 "> 
        <!---- SCREEN FOR USERS WHEN NOT LOGGED IN --> 
        <% if !user_signed_in? %> 
          
        <% else %> 
         <!-- LOAD CAREER RESOURCE PARTIAL --> 
        
            <section style="height: 70em" id="tips_section">
            <%= render "university/partials/tips" %>
            </section>

            <section style="height: 70em" id="tips_grad_section">
            <%= render "university/partials/tips_grad" %>
             </section>
             
            <section style="height: 70em" id="influencer_section">
            <%= render "university/partials/influencers" %>
             </section>
        
            <section style="" >
            
            <%= render "university/partials/jobs" %>
            </section>
        <% end %> 
            
           

        
    
       
    </div>
  
  <script>
        
        $( document ).ready(function() {
            $('body').css('overflow','hidden');
            $('body').attr('scroll','no');
        });
        
        
      
   $('#opportunities_button').click(function(){
         $('body').css('overflow','visible');
        $('body').attr('scroll','yes');
        $("#influencer_section").hide();
        $("#tips_grad_section").hide();
        $("#tips_section").hide();
        }); 
        
    $(".menu_button").click(function(){
         $("#influencer_section").show();
        $("#tips_grad_section").show();
        $("#tips_section").show();
        $('body').css('overflow','hidden');
        $('body').attr('scroll','no');
    })
  </script>
</div>