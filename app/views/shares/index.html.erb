<p id="notice"><%= notice %></p>

<h1>Shares</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th data-field="title">Title</th>
      <th data-field="body">Description</th>
      <th data-field="sector">Bloc</th>
      <th data-field="date">Created</th>
      <th data-field="table-links"></th>
    </tr>
  </thead>

  <tbody>
  <% @shares.each do |share| %>
    <tr>
      <td><%= share.title %></td>
      <td><%= share.body %></td>
      <td><%= share.sector %></td>
      <td><%= share.created_at.strftime("%m/%d/%y") %></td>
      <td><%= link_to 'Edit', edit_share_path(share) %> | <%= link_to 'Destroy', share, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Share', new_share_path %>
