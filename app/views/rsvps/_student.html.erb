$('.tip_industry2').click(function(){
      var idval = $(this).attr("id");
      console.log(idval);
          
      $('#field_tipindustry2').val(idval);
            
  });
  
  $(".field div").click(function(){
    $(this).css ({
      'border' : "5px solid yellow" });
