<h1 id="formhead" class="teal-text">WELCOME BACK</h1>

<div class="loginback"> </div>

<div class="loginform">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "EMAIL" , :class =>"fieldtext" %><br />
    <%= f.email_field :email, autofocus: true  , :class =>"fieldtext"%>
  </div>

  <div class="field">
    <%= f.label "PASSWORD" , :class =>"fieldtext" %><br />
    <%= f.password_field :password, autocomplete: "off" , :class =>"fieldtext" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me , :class =>"fieldtext" %>
      <%= f.label :remember_me , :class =>"fieldtext"%>
    </div>
  <% end -%>

  <div class="waves-effect waves-light btn" id="signupbtn">
    <%= f.submit "Log in" , :class => "white-text" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

</div>

